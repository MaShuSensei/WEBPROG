
<script>
    // Get the logo element
    const logo = document.getElementById('logo');

    // Define a function for the animation
    function rotateLogo() {
        // Rotate the logo by 360 degrees
        logo.style.transform = `rotate(${360}deg)`;

        // Set a transition for a smooth animation
        logo.style.transition = 'transform 1s ease';

        // After the animation is complete, reset the rotation
        setTimeout(() => {
            logo.style.transform = 'rotate(0deg)';
        }, 1000);
    }

    // Call the rotateLogo function when the page is loaded
    window.addEventListener('load', rotateLogo);
</script>
</body>
